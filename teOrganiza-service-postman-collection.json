				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// This script automatically saves the JWT token to a collection variable",
									"// after a successful login.",
									"if (pm.response.code === 200) {",
									"    pm.collectionVariables.set(\"jwt_token\", pm.response.json().accessToken);",
									"    console.log(\"JWT Token saved!\");",
								"} else {",
								"    console.error(\"Could not save JWT token. Status code: \" + pm.response.code);",
								"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Authenticates a user and returns a JWT token."
					},
